{
  "name": "monorepotime",
  "version": "1.1.7",
  "description": "monorepo / turborepo gui tools built with nodejs and reactjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --watch '../../packages/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "stop": "npx -y kill-port 4793",
    "predep": "rm -rf public && mkdir -p public && cp -r ../web/dist/* public/",
    "publish": "npm publish --access public",
    "beta": "npm publish --access public --tag beta"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "execa": "^9.6.1",
    "express": "^4.19.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.3",
    "open": "^11.0.0",
    "pidusage": "^4.0.1",
    "socket.io": "^4.8.3"
  },
  "keywords": [
    "monorepotime",
    "monorepo",
    "gui",
    "tools",
    "turborepo",
    "cicd",
    "npm",
    "package"
  ],
  "author": "Anghelo Amir",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.9",
    "@types/pidusage": "^2.0.5",
    "apiroute": "*",
    "config": "*",
    "nodemon": "^3.1.11",
    "template": "*",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "types": "*",
    "typescript": "^5.9.3"
  },
  "bin": {
    "monorepotime": "./dist/index.js"
  },
  "files": [
    "dist",
    "public"
  ],
  "fontawesomeIcon": "fa fa-server"
}
